						<td><TriStateCheckBox DisableTooltip Id="partyFighterAll" @bind-Value="@Flags.AllFighters"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyThiefAll" @bind-Value="@Flags.AllThiefs"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyBlackBeltAll" @bind-Value="@Flags.AllBlackBelts"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyRedMageAll" @bind-Value="@Flags.AllRedMages"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyWhiteMageAll" @bind-Value="@Flags.AllWhiteMages"></TriStateCheckBox></td>
						<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackMageAll" @bind-Value="@Flags.AllBlackMages"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyKnightAll" @bind-Value="@Flags.AllKnights"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyNinjaAll" @bind-Value="@Flags.AllNinjas"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyMasterAll" @bind-Value="@Flags.AllMasters"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyRedWizAll" @bind-Value="@Flags.AllRedWizards"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyWhiteWizAll" @bind-Value="@Flags.AllWhiteWizards"></TriStateCheckBox></td>
						<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackWizAll" @bind-Value="@Flags.AllBlackWizards"></TriStateCheckBox></td>
						<td><TriStateCheckBox DisableTooltip Id="partyNoneAll" @bind-Value="@Flags.AllNones" IsEnabled="@(Flags.EnablePoolParty != true)"></TriStateCheckBox></td>
					</tr>
					@if (Flags.EnablePoolParty != true)
					{
				<tr>
					<td class="right-bordered">#1</td>
					<td><TriStateCheckBox DisableTooltip Id="partyForced1" @bind-Value="@Flags.FORCED1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyFighter1" @bind-Value="@Flags.FIGHTER1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyThief1" @bind-Value="@Flags.THIEF1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyBlackBelt1" @bind-Value="@Flags.BLACK_BELT1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyRedMage1" @bind-Value="@Flags.RED_MAGE1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyWhiteMage1" @bind-Value="@Flags.WHITE_MAGE1"></TriStateCheckBox></td>
					<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackMage1" @bind-Value="@Flags.BLACK_MAGE1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyKnight1" @bind-Value="@Flags.KNIGHT1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyNinja1" @bind-Value="@Flags.NINJA1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyMaster1" @bind-Value="@Flags.MASTER1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyRedWiz1" @bind-Value="@Flags.RED_WIZ1"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyWhiteWiz1" @bind-Value="@Flags.WHITE_WIZ1"></TriStateCheckBox></td>
					<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackWiz1" @bind-Value="@Flags.BLACK_WIZ1"></TriStateCheckBox></td>
					<td></td>
				</tr>
				<tr class="odd">
					<td class="right-bordered">#2</td>
					<td><TriStateCheckBox DisableTooltip Id="partyForced2" @bind-Value="@Flags.FORCED2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyFighter2" @bind-Value="@Flags.FIGHTER2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyThief2" @bind-Value="@Flags.THIEF2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyBlackBelt2" @bind-Value="@Flags.BLACK_BELT2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyRedMage2" @bind-Value="@Flags.RED_MAGE2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyWhiteMage2" @bind-Value="@Flags.WHITE_MAGE2"></TriStateCheckBox></td>
					<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackMage2" @bind-Value="@Flags.BLACK_MAGE2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyKnight2" @bind-Value="@Flags.KNIGHT2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyNinja2" @bind-Value="@Flags.NINJA2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyMaster2" @bind-Value="@Flags.MASTER2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyRedWiz2" @bind-Value="@Flags.RED_WIZ2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyWhiteWiz2" @bind-Value="@Flags.WHITE_WIZ2"></TriStateCheckBox></td>
					<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackWiz2" @bind-Value="@Flags.BLACK_WIZ2"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyNone2" @bind-Value="@Flags.NONE_CLASS2"></TriStateCheckBox></td>
				</tr>
				<tr>
					<td class="right-bordered">#3</td>
					<td><TriStateCheckBox DisableTooltip Id="partyForced3" @bind-Value="@Flags.FORCED3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyFighter3" @bind-Value="@Flags.FIGHTER3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyThief3" @bind-Value="@Flags.THIEF3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyBlackBelt3" @bind-Value="@Flags.BLACK_BELT3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyRedMage3" @bind-Value="@Flags.RED_MAGE3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyWhiteMage3" @bind-Value="@Flags.WHITE_MAGE3"></TriStateCheckBox></td>
					<td class="right-bordered"><TriStateCheckBox DisableTooltip Id="partyBlackMage3" @bind-Value="@Flags.BLACK_MAGE3"></TriStateCheckBox></td>
					<td><TriStateCheckBox DisableTooltip Id="partyKnight3" @bind-Value="@Flags.KNIGHT3"></TriStateCheckBox></td>
