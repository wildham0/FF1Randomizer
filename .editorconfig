root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,xaml,cshtml,razor}]
indent_size = 4
indent_style = tab
end_of_line = crlf

[*.{csproj}]
indent_size = 2
indent_style = space
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2
indent_style = space
end_of_line = lf

[*.{js,json}]
indent_size = 4
indent_style = tab
end_of_line = lf

[*.{sh}]
end_of_line = lf
